{
  "name": "Dictionary Anywhere",
  "short_name": "idanywhere",
  "description": "Dictionary Anywhere provides access to a floating multilingual Google Translate panel on any webpage",
  "author": "Jeremy Schomery",
  "version": "0.1.4",
  "manifest_version": 2,
  "permissions": [
    "storage",
    "tabs",
    "contextMenus",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],
  "web_accessible_resources": [
    "data/icons/activator.png",
    "data/icons/loading.gif"
  ],
  "background": {
    "page": "lib/chrome/background.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "exclude_matches": ["http://translate.google.com/m/*", "https://translate.google.com/m/*"],
      "js": ["data/content_script/chrome/chrome.js", "data/content_script/inject.js"],
      "css": ["data/content_script/inject.css"],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": ["https://translate.google.com/*", "http://translate.google.com/*"],
      "js": ["data/panel/chrome/chrome.js", "data/panel/inject.js"],
      "css": ["data/panel/inject.css"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "options_page": "data/options/index.html",
  "homepage_url": "http://add0n.com/dictionary.html",
  "icons": {
    "16": "data/icons/16.png",
    "48": "data/icons/48.png",
    "128": "data/icons/128.png"
  }
}
